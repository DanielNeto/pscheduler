#!/usr/bin/python
#
# Determine if this tool can run a test based on a test spec.
#

import datetime
import sys
import socket
from contextlib import closing

import pscheduler

logger = pscheduler.Log(prefix='tool-bwctltracepath', quiet=True)

json = pscheduler.json_load(exit_on_error=True);

try:
    if json['type'] != 'trace':
        pscheduler.fail('Unsupported test type')
except KeyError:
    pscheduler.fail('Missing test type')

spec = json['spec']

unsupported_options = [ 'algorithm', 'as', 'dest-port', 'fragment', 'probe-type', 'queries', 'sendwait', 'wait', 'sendwait', 'hops', 'first-ttl' ]
for unsupported_option in unsupported_options:
    if spec.has_key(unsupported_option):
        pscheduler.fail("BWCTL does not support %s" % unsupported_option)


source = spec.get("source", "localhost")

# This digs up everything we can on the hosts involved in a
# time-predictable way.
has = pscheduler.api_has_services([source], timeout=3)

if has[source]["pscheduler"]:
    pscheduler.fail("Source has pscheduler, no need for BWCTL")

if not has[source]["bwctl"]:
    logger.debug("No BWCTL at source")
    pscheduler.fail("No BWCTL on %s" % source)

logger.debug("can-run succeeded") 
pscheduler.succeed()
