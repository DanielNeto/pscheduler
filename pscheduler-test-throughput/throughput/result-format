#!/usr/bin/python
#
# Format a result
#

import jsontemplate
import pscheduler
import sys

logger = pscheduler.Log()

try:
   format = sys.argv[1]
except IndexError:
   format = 'text/plain'

json = pscheduler.json_load(exit_on_error=True)

logger.debug("json is %s" % json)

print json

if format == 'text/plain':

   template = """
{.section diag}{diag}{.end}
"""
else:

   pscheduler.fail("Unsupported format '%s'" % format)


# TODO: Should probably handle exceptions in a nicer way.
print jsontemplate.expand(template, json).strip()
