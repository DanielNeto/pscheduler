[Unit]
Description=pScheduler server - scheduler

[Service]
Type=simple
User=pscheduler
Group=pscheduler
PermissionsStartOnly=true
ExecStart=/usr/lib/pscheduler/daemons/scheduler --dsn @/etc/pscheduler/database/database-dsn
ExecStartPost=/bin/sh -c "echo $MAINPID > /run/pscheduler-scheduler.pid"
ExecStopPost=/bin/rm -f /run/pscheduler-scheduler.pid

[Install]
WantedBy=multi-user.target
